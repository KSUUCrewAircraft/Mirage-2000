<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>banq.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>base</object-name>
    <object-name>texte</object-name>
    <object-name>visses</object-name>
    <object-name>bigbut0</object-name>
    <object-name>but0</object-name>
    <object-name>bigbut1</object-name>
    <object-name>but1</object-name>
    <object-name>but2</object-name>
    <object-name>but3</object-name>

    <!-- Objets transparents -->

  </animation>

  <animation>
    <type>material</type>
    <object-name>texte</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>base</object-name>
    <object-name>visses</object-name>
    <object-name>bigbut0</object-name>
    <object-name>but0</object-name>
    <object-name>bigbut1</object-name>
    <object-name>but1</object-name>
    <object-name>but2</object-name>
    <object-name>but3</object-name>
    <condition>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <red>   0.13 </red>
      <green> 0.13 </green>
      <blue>  0.13 </blue>
    </emission>
  </animation>

  <!--
  Centre de rotation de but0 et bigbut0
  
  Objet : Planche de bord
  
  x :  0.00153
  y : -0.02388
  z :  0.00016
  
  180 ° sur axe X
  -->
  <animation>
    <type>pick</type>
    <object-name>but0</object-name>
    <action>
      <button>4</button>
      <!--  scroll up -->
      <binding>
        <command>property-adjust</command>
        <property>/controls/lighting/boardLightUV</property>
        <step>0.04</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>but0</object-name>
    <action>
      <button>3</button>
      <!--  scroll down -->
      <binding>
        <command>property-adjust</command>
        <property>/controls/lighting/boardLightUV</property>
        <step>-0.04</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>but0</object-name>
    <object-name>bigbut0</object-name>
    <property>/controls/lighting/boardLightUV</property>
    <factor>180</factor>
    <offset-deg>-180</offset-deg>
    <center>
      <x-m> 0.00153</x-m>
      <y-m>-0.02388</y-m>
      <z-m> 0.00016</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>

  <!--
  Centre de rotation de but1 et bigbut1
  
  Objet : BANQUETTES
  
  x :  0.00153
  y : -0.00022
  z :  0.00016
  
  180 ° sur axe X
  -->
  <animation>
    <type>pick</type>
    <object-name>but1</object-name>
    <action>
      <button>4</button>
      <!--  scroll up -->
      <binding>
        <command>property-adjust</command>
        <property>/controls/lighting/sideLightUV</property>
        <step>0.04</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>but1</object-name>
    <action>
      <button>3</button>
      <!--  scroll down -->
      <binding>
        <command>property-adjust</command>
        <property>/controls/lighting/sideLightUV</property>
        <step>-0.04</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>but1</object-name>
    <object-name>bigbut1</object-name>
    <property>/controls/lighting/sideLightUV</property>
    <factor>180</factor>
    <offset-deg>-180</offset-deg>
    <center>
      <x-m> 0.00153</x-m>
      <y-m>-0.00022</y-m>
      <z-m> 0.00016</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>

  <!--
  Centre de rotation de but2
  
  Objet : VOYANTS
  
  x : 0.00152
  y : 0.01629
  z : 0.00016
  
  180 ° sur axe X
  -->
  <animation>
    <type>pick</type>
    <object-name>but2</object-name>
    <action>
      <button>4</button>
      <!--  scroll up -->
      <binding>
        <command>property-adjust</command>
        <property>/controls/lighting/instruments-norm</property>
        <step>0.04</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>but2</object-name>
    <action>
      <button>3</button>
      <!--  scroll down -->
      <binding>
        <command>property-adjust</command>
        <property>/controls/lighting/instruments-norm</property>
        <step>-0.04</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>but2</object-name>
    <property>/controls/lighting/instruments-norm</property>
    <factor>270</factor>
    <offset-deg>-270</offset-deg>
    <center>
      <x-m>0.00152</x-m>
      <y-m>0.01629</y-m>
      <z-m>0.00016</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>

  <!--
  Centre de rotation de but3
  
  Objet : BLANC
  
  x : 0.00152
  y : 0.03458
  z : 0.00016
  
  180 ° sur axe X
  -->

</PropertyList>
