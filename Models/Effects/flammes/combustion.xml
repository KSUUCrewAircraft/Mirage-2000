<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>combustion.ac</path>

  <animation>
    <object-name>ReheatInner</object-name>
    <object-name>ReheatOuter</object-name>
    <object-name>ExternalFlame</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>ReheatInner</object-name>
    <object-name>ReheatOuter</object-name>
  </effect>

  <model>
    <name>flammeNight</name>
    <path>Aircraft/Mirage-2000/Models/Effects/flammes/combustion_Night.xml</path>
    <offsets>
      <x-m>0.1</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>

  <model>
    <name>flammeDay</name>
    <path>Aircraft/Mirage-2000/Models/Effects/flammes/combustion_Day.xml</path>
    <offsets>
      <x-m>0.1</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>

  <model>
    <name>flammeDusk</name>
    <path>Aircraft/Mirage-2000/Models/Effects/flammes/combustion_Dusk.xml</path>
    <offsets>
      <x-m>0.1</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>

  <animation>
    <type>select</type>
    <object-name>ReheatInner</object-name>
    <object-name>ReheatOuter</object-name>
    <object-name>flammeNight</object-name>
    <object-name>flammeDay</object-name>
    <object-name>flammeDusk</object-name>
    <condition>
      <greater-than>
        <property>sim/multiplay/generic/float[14]</property>
        <value>0.2</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ExternalFlame</object-name>
  </animation>

  <!--animation>
    <type>scale</type>
    <object-name>ExternalFlame</object-name>
    <property>sim/multiplay/generic/float[14]</property>
    <x-min> 0.2 </x-min>
    <y-min> 0.9 </y-min>
    <z-min> 0.9 </z-min>
    <x-factor> 1.30 </x-factor>
    <y-factor> 0.25 </y-factor>
    <z-factor> 0.25 </z-factor>
  </animation-->

  <animation>
    <type>spin</type>
    <object-name>ReheatOuter</object-name>
    <object-name>ReheatInner</object-name>
    <property>sim/multiplay/generic/float[4]</property>
    <factor>437</factor>
    <axis>
      <x>-1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>

  <!-- ############### NIGHT FLAMME ####################-->
  <animation>
    <type>material</type>
    <object-name>ReheatInner</object-name>
    <condition>
      <greater-than>
        <property>sim/time/sun-angle-rad</property>
        <value>1.7</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.6 </red>
      <green> 0.5 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ReheatOuter</object-name>
    <condition>
      <greater-than>
        <property>sim/time/sun-angle-rad</property>
        <value>1.7</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.85 </red>
      <green> 0.70 </green>
      <blue>  1.00 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>flammeNight</object-name>
    <condition>
      <greater-than>
        <property>sim/time/sun-angle-rad</property>
        <value>1.7</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>flammeNight</object-name>
    <property>sim/multiplay/generic/float[14]</property>
    <x-min> 0 </x-min>
    <y-min> 1 </y-min>
    <z-min> 1 </z-min>
    
    <x-factor> 1 </x-factor>
    <y-factor> 1 </y-factor>
    <z-factor> 1 </z-factor>
  </animation>

  <!-- ############### DAY FLAMME ####################-->
  <animation>
    <type>material</type>
    <object-name>ReheatInner</object-name>
    <condition>
      <less-than>
        <property>sim/time/sun-angle-rad</property>
        <value>1.45</value>
      </less-than>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 0.4 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ReheatOuter</object-name>
    <condition>
      <less-than>
        <property>sim/time/sun-angle-rad</property>
        <value>1.45</value>
      </less-than>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 0.3 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>flammeDay</object-name>
    <condition>
      <less-than>
        <property>sim/time/sun-angle-rad</property>
        <value>1.45</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>flammeDay</object-name>
    <property>sim/multiplay/generic/float[14]</property>
    <x-min> 0 </x-min>
    <y-min> 1 </y-min>
    <z-min> 1 </z-min>
    
    <x-factor> 1 </x-factor>
    <y-factor> 1 </y-factor>
    <z-factor> 1 </z-factor>
  </animation>

  <!-- ############### DUSK FLAMME ####################-->
  <animation>
    <type>material</type>
    <object-name>ReheatInner</object-name>
    <condition>
      <and>
        <less-than>
          <property>sim/time/sun-angle-rad</property>
          <value>1.7</value>
        </less-than>
        <greater-than>
          <property>sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </greater-than>
      </and>
    </condition>
    <emission>
      <red>1.00</red>
      <green>0.20</green>
      <blue>0.05</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ReheatOuter</object-name>
    <condition>
      <and>
        <less-than>
          <property>sim/time/sun-angle-rad</property>
          <value>1.7</value>
        </less-than>
        <greater-than>
          <property>sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </greater-than>
      </and>
    </condition>
    <emission>
      <red>0.4</red>
      <green> 0.20 </green>
      <blue>0.8</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>flammeDusk</object-name>
    <condition>
      <and>
        <less-than>
          <property>sim/time/sun-angle-rad</property>
          <value>1.7</value>
        </less-than>
        <greater-than>
          <property>sim/time/sun-angle-rad</property>
          <value>1.45</value>
        </greater-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>flammeDusk</object-name>
    <property>sim/multiplay/generic/float[14]</property>
    <x-min> 0 </x-min>
    <y-min> 1 </y-min>
    <z-min> 1 </z-min>
    <x-factor> 1 </x-factor>
    <y-factor> 1 </y-factor>
    <z-factor> 1 </z-factor>
  </animation>

</PropertyList>
