<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>pylons.ac</path>

  <animation>
    <object-name>pylon1.L</object-name>
    <object-name>pylon2.L</object-name>
    <object-name>pylon3.L</object-name>
    <object-name>pylon4.L</object-name>
    <object-name>pylon.C</object-name>
    <object-name>pylon4.R</object-name>
    <object-name>pylon3.R</object-name>
    <object-name>pylon2.R</object-name>
    <object-name>pylon1.R</object-name>
  </animation>

  <!-- pylon options
      _________________|___|_________________
      \                |   |                /
       \               |   |               /
        \2.L        4.L|   |4.R        2.R/
         (1)        (7)|   |(8)        (5)
          \   3.L      |   |      3.R   /
           \  (2)      |   |      (4)  /
            \          |   |          /
             \         |   |         /
              \        |   |        /
               \       |.C |       /
                \      |(3)|      /
                 \     |   |     /
                  \ 1.L|   |1.R /
                   \(0)|   |(6)/
                    \  |   |  /
                     \ |   | /
                      \|___|/
  -->

  <animation>
    <type>select</type>
    <object-name>pylon1.L</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[0]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon2.L</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[1]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon3.L</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[2]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon4.L</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[7]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon.C</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[3]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon1.R</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[6]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon2.R</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[5]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon3.R</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[4]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon4.R</object-name>
    <condition>
      <not-equals>
        <property>sim/weight[8]/selected</property>
